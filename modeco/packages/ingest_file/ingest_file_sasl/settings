if [[ "${INGEST_FILE_SASL_DEPLOY_MODE}" == "replicated" ]] ; then export INGEST_FILE_SASL_DEPLOY_MODE_REPLICATED_REPLICAS="replicas: ${INGEST_FILE_SASL_DEPLOY_REPLICAS}"; else export export INGEST_FILE_SASL_DEPLOY_MODE_REPLICATED_REPLICAS= ; fi
